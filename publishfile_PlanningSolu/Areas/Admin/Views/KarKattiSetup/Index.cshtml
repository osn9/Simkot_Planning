
@model Planning.Areas.Admin.Models.OrganizationSetupViewModel.OrganizationSetupViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 1;

    List<Planning.Planning.Entities.Kar_Katti> KarKatti = new List<Planning.Planning.Entities.Kar_Katti>();
    using (Planning.Planning.Entities.PLANNING_OCT_03Entities db = new Planning.Planning.Entities.PLANNING_OCT_03Entities())
    {
        KarKatti = (from j in db.Kar_Katti select j).ToList();
    }

}


<div class="padding-md">

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="header-list" style="text-align: center">
                    <h2> कर कट्टी</h2>
                </div>
                <hr />

                @if (KarKatti.Count() > 0)
                {
                    <div class="panel-heading">
                    </div>
                }
                else
                {
                    <div class="panel-heading">
                        @Html.ActionLink("नयाँ राख्नुहोस्", "Create", null, new { @class = "btn btn-success btn_add btn-xs" })
                    </div>
                }

                <table class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                        <tr class="success">
                            <th>क्र.स.</th>
                            <th>कन्टेन्जेन्सी</th>
                            <th>मर्मत सम्भार</th>
                            <th>सामाजिक सुरक्षा कर</th>
                            <th>अग्रिम आय कर</th>
                            <th>पारिश्रमिक कर </th>
                            <th>बहाल कर </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.KarKattiViewModelList)
                        {
                            <tr>
                                <th>@Planning.Utility.NepaliEnglishNumber.English_Nepali(i.ToString())</th>
                                <td>@Html.DisplayFor(modelItem => item.Contigency)</td>
                                <td>@Html.DisplayFor(modelItem => item.MarmatSambhar)</td>
                                <td>@Html.DisplayFor(modelItem => item.SamajikSurekchya)</td>
                                <td>@Html.DisplayFor(modelItem => item.AgrimShulka)</td>
                                <td>@Html.DisplayFor(modelItem => item.Parishramik)</td>
                                <td>@Html.DisplayFor(modelItem => item.BahalKar)</td>
                                <td>
                                    <a class="btn btn-success btn-sm" title="Edit" href="@Url.Action("Edit", "KarKattiSetup", new { id = item.Kar_Katti_Id })"><i class="fa fa-edit"></i> सच्याउनुहोस्</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





