@*@model Planning.Areas.Admin.Models.PlanningEntryViewModel.PlanningEntryViewModel*@

@model Planning.Areas.Admin.Models.PlanningSamjhautaViewModel.PlanningSamjhautaViewModel
@using Planning.Helpers

@using (Html.BeginCollectionItem("KistaLastDetailsList"))
{
    @Html.HiddenFor(model => model.Kista_Kram, new { @class = "form-control", @Value = "अन्तिम" })
    <div class="col-md-1">अन्तिम</div>
    <div class="col-md-2">@Html.TextBoxFor(model => model.Kista_Rakam, new { @class = "form-control", @id = "Kista_Rakam4" })</div>
    <div class="col-md-2">@Html.TextBoxFor(model => model.Payment_Date, new { @class = "form-control nepali-calendar", @id = "Payment_Date4", @placeholder = "____/__/__" })</div>
    <div class="col-md-2">@Html.TextBoxFor(model => model.Peski_Bhuktani, new { @class = "form-control", @id = "Peski_Bhuktani4" })</div>
    <div class="col-md-2">@Html.TextAreaFor(model => model.Sarta, new { @class = "form-control", @id = "Sarta4" })</div>
    <div class="col-md-3 form-group">@Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @id = "Description4" })</div>
    <div class="clearfix"></div>
}

<script>
    $('#Payment_Date4').nepaliDatePicker({
        npdMonth: true,
        npdYear: true,
        npdYearCount: 10
    });
</script>
