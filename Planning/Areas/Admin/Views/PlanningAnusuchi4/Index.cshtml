
@model Planning.Areas.Admin.Models.PlanningAnusuchiViewModel.Anusuchi4ViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 1;
}



<div id="dialog-confirm" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        Are you sure to delete?
    </p>
</div>
<div id="dialog-edit" style="display: none">
</div>
<div id="dialog-detail" style="display: none">
</div>

<div class="padding-md">


    @if (TempData["Msg"] != null)
    {
        <script>alert("@TempData["Msg"]");</script>
    }

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="header-list" style="text-align: center">
                    <h2>खर्च सार्वजनिक सूचना</h2>
                </div>
                <hr />
                <div class="panel-heading">
                    @Html.ActionLink("खर्च सूचना राख्नुहोस्", "Anusuchi4", null, new { @class = "btn btn-success btn_add btn-xs" })
                </div>
                <table class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                        <tr class="success">
                            <th>क्र.स.</th>
                            <th>आर्थिक वर्ष</th>
                            <th>आयोजना</th>
                            <th>आयोजना स्थल</th>
                            <th>वजेट</th>
                            <th>सम्झोेता मिति</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Anusuchi4ViewModelList)
                        {
                            <tr>
                                <th>@Planning.Utility.NepaliEnglishNumber.English_Nepali(i.ToString())</th>
                                <td>@item.Fiscal_Year</td>
                                <td>@item.Project_Name</td>
                                <td>@item.Project_Place</td>
                                <td>@item.Project_Estimated_Amount</td>
                                <td>@Planning.Utility.NepaliEnglishNumber.English_Nepali(item.Project_Approval_Date.Value.ToShortDateString())</td>
                                <td>
                                    <a class="btn btn-success btn-sm" title="सच्याउनुहोस्" href="@Url.Action("EditAnusuchi4", "PlanningAnusuchi4", new { id = item.AnuSuchi4_Id })"><i class="fa fa-edit"></i> सच्याउनुहोस्</a>
                                    <a class="btn btn-primary btn-sm" title="विवरण" href="@Url.Action("Anusuchi4Report", "PlanningAnusuchi4", new { anuSuchi4_Id = item.AnuSuchi4_Id })"><i class="fa fa-edit"></i> विवरण</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

