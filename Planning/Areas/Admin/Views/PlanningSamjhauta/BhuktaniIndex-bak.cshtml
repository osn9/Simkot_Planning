


@model Planning.Areas.Admin.Models.PlanningBhuktaniViewModel.PlanningBhuktaniViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<div id="dialog-confirm" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        Are you sure to delete?
    </p>
</div>
<div id="dialog-edit" style="display: none">
</div>
<div id="dialog-detail" style="display: none">
</div>

<div class="padding-md">
    @if (ViewBag.success != null)
    {
        <div class="alert alert-success">
            <strong>Well done!</strong> @ViewBag.success
        </div>
    }
    @if (TempData["SuccessMsg"] != null)
    {
        <script>alert("@TempData["SuccessMsg"]");</script>
    }

    @if (TempData["Msg"] != null)
    {
        <script>alert("@TempData["Msg"]");</script>
    }
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="header-list" style="text-align: center">
                    <h2>भुक्तानी</h2>
                </div>
                <hr />
                <div class="panel-heading">
                    @Html.ActionLink("नयाँ भुक्तानी राख्नुहोस्", "CreateBhuktani", null, new { @class = "btn btn-success btn_add btn-xs" })
                </div>
                <table class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                        <tr class="success">
                            <th>क्र.स.</th>
                            <th>आर्थिक वर्ष</th>
                            <th>वजेट शिर्षक</th>
                            <th>वजेट शिर्षक नं.</th>
                            <th>आयोजना / कार्यक्रम</th>
                            <th>निर्माण उपभोक्ता</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PlanningBhuktaniViewModelList)
                        {
                            <tr>
                                <th>@Planning.Utility.NepaliEnglishNumber.English_Nepali(i.ToString())</th>
                                <td>@Planning.Utility.NepaliEnglishNumber.English_Nepali(item.Fiscal_Year_Record)</td>
                                <td>@item.Budget_Title</td>
                                <td>@Planning.Utility.NepaliEnglishNumber.English_Nepali(item.Budget_Title_Number.ToString())</td>
                                <td>@item.Aayojana_Karyakram</td>
                                <td>@item.Nirman_Upabhokta</td>
                                <td>
                                    <a class="btn btn-success btn-sm" title="सच्याउनुहोस्" href="@Url.Action("EditBhuktani", "PlanningSamjhauta", new { id = item.Planning_Bhuktani_Id })"><i class="fa fa-edit"></i> सच्याउनुहोस्</a>
                                    <a class="btn btn-success btn-sm" title="विवरण" href="@Url.Action("BhuktaniReport", "PlanningSamjhauta", new { planningBhuktaniId = item.Planning_Bhuktani_Id })"><i class="fa fa-edit"></i> विवरण</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





