@model Planning.Areas.Admin.Models.PlanningAnusuchiViewModel.Anusuchi1ViewModel

@using Planning.Helpers

@using (Html.BeginCollectionItem("Anusuchi1ViewModelList"))
{
    
<div id="Members_Samiti" class="form-group">
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>उपभोक्ता समितिको नाम र ठेगाना</label>
            @Html.EditorFor(model => model.Upabhokta_Samiti_Name, new { htmlAttributes = new { @class = "form-control " } })
            @Html.ValidationMessageFor(model => model.Upabhokta_Samiti_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>अध्यक्ष:</label>
            @Html.EditorFor(model => model.Adakshya, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Adakshya, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>उपाध्यक्ष:</label>
            @Html.EditorFor(model => model.Upadakshya, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Upadakshya, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>सचिव:</label>
            @Html.EditorFor(model => model.Sachib, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Sachib, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>कोषाध्यक्ष:</label>
            @Html.EditorFor(model => model.Koshadakshya, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Koshadakshya, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>गठन मिति:</label>
            @Html.EditorFor(model => model.Establish_Date, new { htmlAttributes = new { @class = "form-control nepali-calendar EstdDate", @onclick = "getCalendar(this)" } })
            @Html.ValidationMessageFor(model => model.Establish_Date, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>बैंकको नाम:</label>
            @Html.EditorFor(model => model.Bank_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Bank_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="form-group">
            <label>खाता नं.:</label>
            @Html.EditorFor(model => model.Account_Number, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Account_Number, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="btn-delete col-md-1">
        <div><a href='javascript:;' class="btn btn-danger btn-sm removeSamiti"><span class='fa fa-minus fa-1x'></span></a></div>
    </div>
    <div class="clearfix"></div>
</div>
}


<script>
    $(".removeSamiti").click(function () {
        $(this).parents("#Members_Samiti").remove();
    });
</script>

<script>
    function getCalendar(a) {
        debugger;
        var row = $(a).closest('.row');
        $(row).find('.EstdDate').nepaliDatePicker({
            npdMonth: true,
            npdYear: true,
            npdYearCount: 10
        });
    }
</script>