
@model Planning.Areas.Admin.Models.PasswordChangeViewModel.PasswordChangeViewModel


@{
    ViewBag.Title = "पासवर्ड परिवर्तन";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@ViewBag.UserName
@ViewBag.UserId

@using (Html.BeginForm("ResetUserPassword", "PlanningDashBoard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.Email)
    <h4 style="padding-left:30%;">पासवर्ड परिवर्तन गर्नुहोस ।</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.currentPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.PasswordFor(m => m.currentPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.newPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.PasswordFor(m => m.newPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.confirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="परिवर्तन गर्नुहोस" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}