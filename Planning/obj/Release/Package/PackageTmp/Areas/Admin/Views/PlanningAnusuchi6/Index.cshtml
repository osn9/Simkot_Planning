
@model Planning.Areas.Admin.Models.PlanningAnusuchiViewModel.Anusuchi6ViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 1;
}



<div id="dialog-confirm" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        Are you sure to delete?
    </p>
</div>
<div id="dialog-edit" style="display: none">
</div>
<div id="dialog-detail" style="display: none">
</div>

<div class="padding-md">


    @if (TempData["Msg"] != null)
    {
        <script>alert("@TempData["Msg"]");</script>
    }

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="header-list" style="text-align: center">
                    <h2>प्रगति प्रतिवेदन</h2>
                </div>
                <hr />
                <div class="panel-heading">
                    @Html.ActionLink("प्रगति प्रतिवेदन राख्नुहोस्", "Anusuchi6", null, new { @class = "btn btn-success btn_add btn-xs" })
                </div>
                <table class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                        <tr class="success">
                            <th>क्र.स.</th>
                            <th>आयोजना</th>
                            <th>वडा</th>
                            <th>उपभोक्ता समिति</th>
                            <th>आयोजना लागत</th>
                            <th>हालसम्मको खर्च</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Anusuchi6ViewModelList)               
                        {
                            <tr>
                                <th>@Planning.Utility.NepaliEnglishNumber.English_Nepali(i.ToString())</th>
                                <td>@item.Project_Name</td>
                                <td>@item.Ward_No</td>
                                <td>@item.Upabhokta_Samiti_Name</td>
                                <td>@item.Total_Amount</td>
                                <td>@item.Total_Expenses_TillNow</td>
                                <td>
                                    <a class="btn btn-success btn-sm" title="सच्याउनुहोस्" href="@Url.Action("EditAnusuchi6", "PlanningAnusuchi6", new { id = item.Anusuchi6_Id })"><i class="fa fa-edit"></i> सच्याउनुहोस्</a>
                                    <a class="btn btn-primary btn-sm" title="विवरण" href="@Url.Action("Anusuchi6Report", "PlanningAnusuchi6", new { anuSuchi6_Id = item.Anusuchi6_Id })"><i class="fa fa-edit"></i> विवरण</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

