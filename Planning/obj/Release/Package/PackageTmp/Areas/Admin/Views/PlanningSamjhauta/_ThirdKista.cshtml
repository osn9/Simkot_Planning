@*@model Planning.Areas.Admin.Models.PlanningEntryViewModel.PlanningEntryViewModel*@

@model Planning.Areas.Admin.Models.PlanningSamjhautaViewModel.PlanningSamjhautaViewModel
@using Planning.Helpers



@using (Html.BeginCollectionItem("KistaThirdDetailsList"))
{
    @Html.HiddenFor(model => model.Kista_Kram, new { @class = "form-control", @Value = "तेश्रो" })
    <div class="col-md-1">तेश्रो किस्ता</div>
    <div class="col-md-2">@Html.TextBoxFor(model => model.Kista_Rakam, new { @class = "form-control", @id = "Kista_Rakam3" })</div>
    <div class="col-md-2">@Html.TextBoxFor(model => model.Payment_Date, new { @class = "form-control nepali-calendar", @id = "Payment_Date3", @placeholder = "____/__/__" })</div>
    <div class="col-md-2">@Html.TextBoxFor(model => model.Peski_Bhuktani, new { @class = "form-control", @id = "Peski_Bhuktani3" })</div>
    <div class="col-md-2">@Html.TextAreaFor(model => model.Sarta, new { @class = "form-control", @id = "Sarta3" })</div>
    <div class="col-md-3 form-group">@Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @id = "Description3" })</div>
    <div class="clearfix"></div>
}

<script>
    $('#Payment_Date3').nepaliDatePicker({
        npdMonth: true,
        npdYear: true,
        npdYearCount: 10
    });
</script>
