@model Planning.Areas.Admin.Models.PlanningAnusuchiViewModel.Anusuchi4ViewModel
@{
    ViewBag.Title = "Anusuchi4Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    .cotract_letter {
        border: 1px solid #ccc;
        margin: 30px 0px;
        padding: 30px;
    }

        .cotract_letter header-sec img {
            max-width: 100%;
            max-height: 100px;
        }

    .header-section h1 {
        font-size: 65px;
        letter-spacing: 5px;
    }

    .header-section h2 {
        font-size: 40px;
    }

    .header-section h3, .subject h3 {
        font-size: 30px;
    }

    .header-section h4 {
        font-size: 25px;
        margin-top: 15px;
    }

    .header-section h1, .header-section h2, .header-section h3,
    .header-section h4, .subject h3, .letter_footer h3, .letter_content h4, .aanya-raaya h3 {
        font-weight: 600;
    }

    .subject h3 {
        margin-top: 60px;
    }

    .letter_footer {
        margin-top: 60px;
    }

    .approved-by {
        margin-top: 60px;
    }

    .letter_footer, .letter_footer strong, .letter_content, .titleNumber {
        font-size: 18px;
        font-weight: 500;
    }

        .letter_footer ul {
            margin-top: 15px;
        }

            .letter_footer ul li {
                list-style-type: none;
            }

                .letter_footer ul li span {
                    padding-left: 20px;
                    vertical-align: middle;
                    display: inline-block;
                    position: relative;
                    margin-top: -14px;
                }

        .titleNumber ul li {
            list-style-type: none;
        }

    .personName {
        border-style: none;
    }

        .personName:hover {
            border-style: none;
        }

        .personName:focus {
            border-style: none;
        }

    .btn.btn-primary.pull-right {
        margin-top: 15px;
        margin-right: 15px;
    }
</style>

@foreach (var item in Model.Anusuchi4ViewModelList)
{
    <div class="container">
        <input type="button" class="btn btn-primary pull-right" value="खर्च फारम प्रिन्ट गर्नुहोस" formtarget="_blank" onclick="javascript: printDiv('printdiv')" />
        <div class="cotract_letter" id="printdiv">

            <style>
               .header-section .table tbody > tr , .content-section .table tbody > tr, .detail .table tbody > tr, .sign.table tbody > tr {
                    border: none !important;
                }

                header-section .table tr td , .content-section .table tbody > tr, .detail .table tbody > tr, .sign .table tbody > tr {
                    border: none !important;
                    border-color: #f9f9f9 !important;
                    padding: 0px !important;
                }

                @@media print {
                    .header-section .table tr td, .content-section .table tr td {
                        border: none !important;
                        border:  !important;
                        border-color: #fff !important;
                        padding: 0px !important;
                    }

                    .header-section .table tbody > tr, .content-section .table tbody > tr {
                        border: none !important;
                        border: 0 !important;
                    }

                    .header-section .table, .table tbody > tr, td, .content-section .table, .table tbody > tr {
                        border: none !important;
                        border: 0 !important;
                    }
                }
            </style>

            <div class="header-section">
                <table class="table" border="0" style="border:0px !important;" cellpadding="0" cellspacing="0">
                    <tbody>
                        <tr>
                            <td width="25%" style="border:none !important; border:0px !important;">
                                <img src="~/img/gov-logo.png" style="max-height:120px; max-width:100%; display:inline-block; position:relative; vertical-align:baseline;" />
                            </td>
                            <td width="45%" style="text-align:center; border:none !important; border:0px !important;">
                                <h2 style="font-weight:bold; font-size:18px;">अनुसूची ४</h2>
                                <h2 style="font-weight:bold; font-size:18px; margin-top:0px;">(कार्यविधिको दफा ११(६) सँग सम्बन्धित)</h2>
                                <h2 style="font-weight:bold; font-size:18px; margin-top:0px;">खर्च सार्वजनिक सूचना फारम</h2>
                            </td>
                            <td width="30%" style="border:none !important; border:0px !important;">
                                <img src="~/img/nagarpalika_logo.jpg" style="max-height:120px; max-width:100%; display:inline-block; position:relative; vertical-align:baseline; float:right;" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="content-section">
                <table class="table" border="0" style="border:0px !important;" cellpadding="0" cellspacing="0">
                    <tbody>
                        <tr>
                            @{ var date = DateTime.Now;
                            var currentEnglishDate = date.ToShortDateString();
                            var currentNepaliDate = @Planning.Utility.CommonUtility.getNepaliDate(currentEnglishDate);
                            }
                            <td colspan="2" style="text-align:right; font-size:14px; border:none !important;"><b style="margin-top:0px; display:block;">मिति: @Planning.Utility.NepaliEnglishNumber.English_Nepali(currentNepaliDate)</b></td>
                        </tr>
                        <tr>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">आयोजनाको नामः @item.Project_Name</span></td>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">आयोजनाको स्थलः @item.Project_Place</span></td>
                        </tr>
                        <tr>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">विनियोजित वजेटः @item.Project_Estimated_Amount</span></td>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">आयोजना स्विकृत भएको आ.वः @item.Fiscal_Year</span></td>
                        </tr>
                        <tr>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">आयोजना सम्झोेता भएको मितिः @Planning.Utility.NepaliEnglishNumber.English_Nepali(item.Project_Approval_Date.Value.ToShortDateString())</span></td>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">काम सम्पन्न गर्नु पर्ने मितिः @Planning.Utility.NepaliEnglishNumber.English_Nepali(item.Project_To_Finish_Date.Value.ToShortDateString())</span></td>
                        </tr>
                        <tr>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">काम सम्पन्न भएको मितिः @Planning.Utility.NepaliEnglishNumber.English_Nepali(item.Project_Ended_Date.Value.ToShortDateString())</span></td>
                            <td style="font-size:16px; border:none !important;"><span style="display:block;">उ.स.बेेठकले खर्च स्विकृत गरेको मितिः @Planning.Utility.NepaliEnglishNumber.English_Nepali(item.Samiti_Expenses_Approval_Date.Value.ToShortDateString())</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <table>
                <tbody>
                    <tr>
                        <td>
                            <h2 style="font-weight:bold; font-size:14px;">आम्दानी र खर्चको विवरण</h2>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="col-lg-12 col-md-12" style="font-size:14px; font-weight:500; padding:0px 60px;">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" colspan="2" style="text-align:center">आम्दानी</th>
                            <th scope="col" colspan="2" style="text-align:center">खर्च</th>
                        </tr>
                        <tr>
                            <th>विवरण</th>
                            <th>रकम</th>
                            <th>विवरण</th>
                            <th>रकम</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>प्रथम किस्ता</td>
                            <td>@item.First_Kista</td>
                            <td>ज्याला</td>
                            <td>@item.Jyalla</td>
                        </tr>
                        <tr>
                            <td>दोस्रो किस्ता</td>
                            <td>@item.Second_Kista</td>
                            <td>निर्माण सामाग्री खरिद</td>
                            <td>@item.Nirman_Samagri_Kharid</td>
                        </tr>
                        <tr>
                            <td>तेस्रो किस्ता</td>
                            <td>@item.Third_Kista</td>
                            <td>ढुवानी</td>
                            <td>@item.Dhuwani</td>
                        </tr>
                        <tr>
                            <td>जनश्रमदान</td>
                            <td>@item.Janashram</td>
                            <td>भाडा</td>
                            <td>@item.Bhada</td>
                        </tr>
                        <tr>
                            <td>वस्तुगत सहायता</td>
                            <td>@item.Bastugat_Sahayata</td>
                            <td>व्यवस्थापन खर्च</td>
                            <td>@item.Bawestapan_Kharcha</td>
                        </tr>
                        <tr>
                            <td>लागत सहभागिता</td>
                            <td>@item.Lagat_Sahabhagita</td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="detail">
                <table class="table" border="0" style="border:0px !important;" cellpadding="0" cellspacing="0">
                    <tbody>
                        <tr>
                            <td>
                                <p style="letter-spacing:1px; line-height:30px; font-weight:500; font-size:14px; padding-top:15px; text-align:justify !important;">
                                    उपर्यक्तानुसारको आम्दानी तथा खर्च विवरण यथार्थ हो । यसमा सबै आम्दानी तथा खर्चहरु समावेश गरिएको छ । उपभोक्ताहरुको प्रत्यक्ष सहभागितामा कार्यान्वयन गरिएको छ । यसको एक प्रति वडा कार्यालयमा समेत पेश गरिएको छ ।
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br /><br /><br /><br /><br />
            <div class="sign">
                <table class="table" border="0" style="border:0px !important;" cellpadding="0" cellspacing="0">
                    <tbody>
                        <tr>
                            <td>...................................</td>
                            <td>...................................</td>
                            <td>...................................</td>
                        </tr>
                        <tr>
                            <td style="font-size:14px; border:none !important;"><span style="margin-top:0px; display:block;">कोषाध्यक्ष</span></td>
                            <td style="font-size:14px; border:none !important;"><span style="margin-top:0px; display:block;">सचिव</span></td>
                            <td style="font-size:14px; border:none !important;"><span style="margin-top:0px; display:block;">अध्यक्ष</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

           

            <div class="clearfix"></div>
        </div>
    </div>
 }



<script language="javascript" type="text/javascript">
    function printDiv(divID) {
        var divElements = document.getElementById(divID).innerHTML;
        var oldPage = document.body.innerHTML;
        document.body.innerHTML =
          "<html><head><title></title></head><body>" +
          divElements + "</body>";
        window.print();
        document.body.innerHTML = oldPage;
    }
</script>
